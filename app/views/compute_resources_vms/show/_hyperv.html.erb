<% title @vm.name %>

<div class='col-md-12'>
  <table class="<%= table_css_classes %>">
    <thead>
      <tr><th colspan="2"><%=_('Properties') %></th></tr>
    </thead>
    <tbody>
      <%= prop :id %>
      <%#= prop :cluster %>
      <%= prop :memory_startup %>
      <% if @vm.dynamic_memory_enabled %>
        <%= prop :memory_minimum %>
        <%= prop :memory_maximum %>
      <% end %>
      <%= prop :public_ip_address %>
      <%= prop :mac %>
      <%= prop :processor_count %>
      <%= prop :computer_name %>
      <%= prop :status %>
      <%= prop :state %>
      <%= prop :notes %>
    </tbody>
  </table>
</div>
