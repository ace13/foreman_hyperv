<%= text_f f, :name, label: _('Name') %>

<%
  generations = [ [1, 'Generation 1 (BIOS)'], [2, 'Generation 2 (UEFI)'] ]
%>
<% if new_host %>
  <%= select_f f, :generation, generations, :first, :last, {}, label: 'Generation' %>
<% else %>
  <%= text_f f, :generation, class: 'col-md-3', label: 'Generation' %>
<% end %>

<%= counter_f f, :processor_count, label: _('CPUs'), label_size: 'col-md-2', :'data-soft-max' => 16 %>
<%= text_f f, :memory_mb, class: 'col-md-2', label: _('Memory (MB)') %>
<%= checkbox_f f, :dynamic_memory_enabled, label: _('Use Dynamic Memory')  %>

<% if new_host %>
<%= checkbox_f f, :no_vhd, label: _('Attach a VHD later') %>
<%= text_f f, :new_vhd_path, label: _('VHD name'), placeholder: 'disk01.vhdx' %>
<%= text_f f, :new_vhd_size_bytes, label: _('New VHD size (B)') %>

<!-- Move to interfaces tab? -->
<%
    switches = compute_resource.switches.map { |s| [s.name, s.name] }
%>
<%= select_f f, :switch_name, switches, :first, :last, {include_blank: true}, label: _('Network switch'), class: 'col-md-2' %>
<% end %>

<%= textarea_f f, :notes, class: 'col-md-8', rows: '3' %>
